{
  "presets": [
    ["env", {
      "modules": false
    }],
    "react",
    "stage-1"
  ],
  "plugins": [
    "react-hot-loader/babel"
  ],
  "env": {
    "development": {
      "plugins": [
        "transform-es2015-modules-commonjs",
        "babel-plugin-root-import",
        ["styled-components", {
          "preprocess": true,
          "minify": false,
          "ssr": true
        }]
      ]
    },
    "test": {
      "plugins": [
        "transform-es2015-modules-commonjs",
        "babel-plugin-root-import",
      ]
    },
    "production": {
      "plugins": [
        "transform-react-remove-prop-types",
        "babel-plugin-root-import",
        ["styled-components", {
          "displayName": false
        }]
      ]
    }
  }
}
